.poker-card
  margin 10px
  width 130px
  height 200px
  box-sizing border-box
  transition all .3s
  position relative
  border-radius 10px
  box-shadow 0 0 6px #ccc
  display inline-block
  transform-style preserve-3d
  &.unselected
    transform rotateY(180deg)
  &.unselected:hover
    transform scale(1.1) rotateY(180deg)
  .forward,
  .backward
    border-radius 10px
    overflow hidden
    position absolute
    top 0
    bottom 0
    left 0
    right 0
  .forward
    transform translateZ(1px)
    border 1px solid #ccc
    background #fff
    display flex
    flex-direction column
    justify-content center
    align-items center
    .sign
      font-size 24px
      text-indent 14px
      text-align left
      width: 100%
      &.red
        color #f00
      &.black
        color #000
  .backward
    transform rotateY(180deg)
    border 1px solid #ccc
    .backward-background
      border-radius 10px
      border 6px double #fcf
      width 100%
      height 100%
      background-color #fdf
      background-image url('../../resources/card.png'), repeating-linear-gradient(120deg, rgba(255,255,255,.1), rgba(255,255,255,.1) 5px, transparent 10px, transparent 60px),repeating-linear-gradient(60deg, rgba(255,255,255,.1), rgba(255,255,255,.1) 5px, transparent 5px, transparent 60px),linear-gradient(60deg, rgba(0,0,0,.1) 25%, transparent 25%, transparent 75%, rgba(0,0,0,.1) 75%, rgba(0,0,0,.1)),linear-gradient(120deg, rgba(0,0,0,.1) 25%, transparent 25%, transparent 75%, rgba(0,0,0,.1) 75%, rgba(0,0,0,.1));
      background-size: contain;
      background-clip: content-box;
      background-position: center center;
      background-repeat: no-repeat;
  .avatar
    width 80%
    border-radius 100%
    overflow hidden
    border 3px solid #fdf
    .inner-image
      background-size cover
      padding-top 100%
  .uname
    line-height 16px
    height 32px
    overflow: hidden
    max-width 80%
    font-size: 14px
    margin-top: 10px
    text-align: center
    color #888
    word-break break-all
    text-overflow: ellipsis
    display: -webkit-box
    -webkit-line-clamp: 2
    -webkit-box-orient: vertical